<?php

namespace App\Http\Controllers\Api;

use App\Http\Controllers\Controller;
use App\Traits\FileUploads;
use App\Traits\Res;
use Illuminate\Http\Request;
use Illuminate\Support\Facades\Validator;

class FavoriteProductController extends Controller
{
    use Res, FileUploads;
    /**
     * Display a listing of the resource.
     *
     * @return \Illuminate\Http\Response
     */
    public function index(Request $request)
    {
        $user = auth()->user();
        $favorite_products = $user->favorite_products()->with('product.items')->get();
        return $this->sendRes('validation.success', true, $favorite_products);
    }


    public function store(Request $request)
    {
        $user = auth()->user();
        $rules = [
            'product_id' => ['required', 'exists:products,id'],
        ];

        $validator = Validator::make($request->all(), $rules);
        if($validator->fails()) {
            $message = implode('<br>', $validator->errors()->all());
            return $this->sendRes($message, false, [], $validator->errors(), 400);
        }

        $finded_favorite = $user->favorite_products()->where('product_id', $request->product_id)->first();
        if($finded_favorite) {
            $finded_favorite->delete();
        } else {
            $user->favorite_products()->create([
                'product_id' => $request->product_id
            ]);
        }

        return $this->sendRes(__('validation.success'), true);
    }



}
